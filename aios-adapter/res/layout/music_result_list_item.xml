<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:background="@null"
    android:minHeight="@dimen/result_list_item_min_height">

    <!--序号-->
    <TextView
        android:id="@+id/index_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#E6F7FF"
        android:textSize="@dimen/font_big"/>

    <!--标题-->
    <com.aispeech.aios.adapter.ui.view.MarqueeTextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="@dimen/plist_padding"
        android:layout_marginEnd="@dimen/plist_padding"
        android:layout_toLeftOf="@+id/image"
        android:layout_toStartOf="@+id/image"
        android:layout_toEndOf="@+id/index_text_view"
        android:layout_toRightOf="@+id/index_text_view"
        android:ellipsize="marquee"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="#E6F7FF"
        android:textSize="@dimen/font_big"/>

    <!--来源图标-->
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/music_source"
        android:layout_toStartOf="@+id/music_source"
        android:src="@drawable/icon_music_cloud"/>

    <!--来源-->
    <TextView
        android:id="@+id/music_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/plist_padding"
        android:layout_marginRight="@dimen/plist_padding"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#7e8588"
        android:textSize="@dimen/font_small"/>

</RelativeLayout>