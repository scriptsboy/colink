<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.SeekBar.Normal" parent="@android:style/Widget.SeekBar">
        <item name="android:maxHeight">8.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/music_seekbar_horizontal</item>
        <item name="android:minHeight">8.0dip</item>
        <item name="android:thumb">@drawable/icon_music_handle</item>
    </style>

    <style name="navos_dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="style_weather_text_prompt">

        <item name="android:textSize">@dimen/font_extreme_small</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#4a4e50</item>
    </style>
    <style name="style_weather_text">

        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#e6f7ff</item>
    </style>
    <style name="SoundWaveStyle">
        <item name="sound_wave_line_color">@color/text_green_color</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/font_middle_large_size</item>
        <item name="android:layout_marginBottom">@dimen/list_title_bottom_margin</item>
    </style>

    <style name="ListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:listSelector">@drawable/selector_listview</item>
        <item name="android:divider">@color/listview_divider_color</item>
        <item name="android:dividerHeight">1px</item>
    </style>
</resources>
