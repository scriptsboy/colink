<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_home"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/contact_dial"
            android:layout_width="@dimen/button_home_width"
            android:layout_height="@dimen/button_home_height"
            android:background="@drawable/dial_button" />

        <ImageButton
            android:id="@+id/contact"
            android:layout_width="@dimen/button_home_width"
            android:layout_height="@dimen/button_home_height"
            android:layout_marginTop="16dp"
            android:background="@drawable/logcontact_button" />

        <ImageButton
            android:id="@+id/contact_del"
            android:layout_width="@dimen/button_home_width"
            android:layout_height="@dimen/button_home_height"
             android:layout_marginTop="16dp"
            android:background="@drawable/contact_del_button" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="16dp"
        android:layout_toRightOf="@+id/left"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/back"
            android:layout_width="@dimen/button_contact_back_width"
            android:layout_height="@dimen/button_contact_back_height"
            android:layout_gravity="right"
            android:background="@drawable/back_button" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_bg"
            android:choiceMode="singleChoice"
            android:divider="@drawable/trabecula"
            android:fastScrollEnabled="true"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbarThumbVertical="@drawable/slider"
            android:scrollbarTrackVertical="@drawable/longtiao" >
        </ListView>
    </LinearLayout>

</RelativeLayout>