<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <View 
	    android:layout_width="@dimen/main_icon_margin_left"
	    android:layout_height="fill_parent"
	    android:background="@null"
	    />
    
    <!-- 1-All function -->
    <FrameLayout android:id="@+id/main_all_function"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/btn_fuction_item_bg"
        android:foreground="@drawable/butten_mask"
        android:gravity="center">
	    <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" 
		    android:orientation="vertical"
		    android:gravity="center">
	        <ImageView
	            android:layout_width = "wrap_content"
	            android:layout_height = "wrap_content"
	            android:src="@drawable/icon_home_all_function"/>
	        
	        <TextView android:id= "@+id/bluetooth_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/main_all_function"
	            android:layout_marginTop = "10dip"
	            style="@style/text_session_item_f4"/>
        </LinearLayout>
    </FrameLayout>
    <View 
        android:id="@+id/line1"
	    android:layout_width="2dp"
	    android:layout_height="fill_parent"
	    android:background="@null"
	    />
    
    <!-- 2-Settings -->
    <FrameLayout android:id="@+id/setting"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" 
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/btn_fuction_item_bg"
        android:foreground="@drawable/butten_mask"
        android:gravity="center">
	    <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" 
		    android:orientation="vertical"
		    android:gravity="center">
	        <ImageView android:id = "@+id/setting_img"
	            android:layout_width = "wrap_content"
	            android:layout_height = "wrap_content"
	            android:src="@drawable/icon_home_setting"/>
	        
	        <TextView android:id= "@+id/setting_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/common_control"
	            android:paddingTop = "@dimen/homepage_itemtextview_padding"
	            style="@style/text_session_item_f4"/>
        </LinearLayout>
    </FrameLayout>

    <View
        android:id="@+id/line2" 
	    android:layout_width="2dp"
	    android:layout_height="fill_parent"
	    android:visibility="invisible"
	    android:background="@null"/>
    
    <!-- 3-stock invisible -->
    <FrameLayout android:id="@+id/stock"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" 
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/btn_fuction_item_bg"
        android:foreground="@drawable/butten_mask"
        android:visibility="invisible"
        android:gravity="center">
	    <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" 
		    android:orientation="vertical"
		    android:gravity="center">
	        <ImageView android:id = "@+id/music_img"
	            android:layout_width = "wrap_content"
	            android:layout_height = "wrap_content"
	            android:src="@drawable/icon_home_setting"/>
	        
	        <TextView android:id= "@+id/music_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/stock_info"
	            android:paddingTop = "10dip"
	            style="@style/text_session_item_f4"/>
        </LinearLayout>
    </FrameLayout>
  
    <View 
        android:id="@+id/line3"
	    android:layout_width="2dp"
	    android:layout_height="fill_parent"
	    android:background="@null"
	    android:visibility="invisible"/>
    
    <!-- 4-null invisible -->
    <FrameLayout android:id="@+id/spare4"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" 
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/btn_fuction_item_bg"
        android:foreground="@drawable/butten_mask"
        android:gravity="center"
        android:visibility="invisible">
	    <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent" 
		    android:orientation="vertical"
		    android:gravity="center">
	        <ImageView android:id = "@+id/poi_img"
	            android:layout_width = "wrap_content"
	            android:layout_height = "wrap_content"
	            android:src="@drawable/icon_home_setting"/>

	        <TextView android:id= "@+id/poi_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/map_navigation"
	            android:paddingTop = "10dip"
	            style="@style/text_session_item_f4"/>
        </LinearLayout>
    </FrameLayout>

    <View 
        android:id="@+id/line4"
	    android:layout_width="2dp"
	    android:layout_height="fill_parent"
	    android:background="@null"
	    android:visibility="invisible"/>

    <View 
	    android:layout_width="@dimen/main_icon_margin_right"
	    android:layout_height="fill_parent"
	    android:background="@null"
	    />
</LinearLayout>
