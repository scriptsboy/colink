<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    >
    
    <!-- Title Text -->
    <TextView 
        android:id="@+id/tv_title_i_know"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/text_session_title_f2"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        />
    
    <!-- I Know Button -->
    <Button 
         android:id="@+id/btn_i_know"
         android:layout_height="@dimen/session_button_hight"
         android:layout_width="fill_parent"
         android:background="@drawable/selector_btn_session"
         android:layout_marginTop="32dp"
         android:gravity="center"
         android:layout_below="@id/tv_title_i_know"
         android:text="@string/button_text_i_know"
         style="@style/text_session_item_f3"
         />

</RelativeLayout>