<?xml version="1.0" encoding="utf-8"?>
<!-- modify by lzl -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/compensate_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/comapnsate_layout_margin"
        android:layout_marginRight="@dimen/comapnsate_layout_margin"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/number_picker_height"
            android:background="@color/right_bg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/mTimer"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:gravity="center"
                android:text="@string/thirdty_second"
                android:textColor="@color/white"
                android:textSize="@dimen/off_textsize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/monitor_model_remind"
                android:textColor="@color/white"
                android:textSize="@dimen/title_textsize" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divid" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/confim_btn_height"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mMonitor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/btn_divid"
                android:layout_weight="1"
                android:background="@drawable/compensate_concel"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textSize="@dimen/title_textsize" />

            <TextView
                android:id="@+id/mShutDown"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/btn_divid"
                android:layout_weight="1"
                android:background="@drawable/right"
                android:gravity="center"
                android:text="@string/shutDown"
                android:textColor="@color/white"
                android:textSize="@dimen/title_textsize" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>